
  <div class = "container">
      <img id = "img" src= "/assets/img/burger.png">
      <h2>Eat-Da-Burger!</h2>
      <div class ="row">
        <div class = "col-md-6"> 
          
            {{#each burgers}}
              {{#unless devoured}}
                <p>
                <button id = "burger" disabled>  {{this.id}}. {{this.burger_name}}          </button>
                <button data-id="{{this.id}}" class="devburger"> Devour it!  </button> 
                </p>
              {{/unless}}
              
            {{/each}}
          
        </div> 
        <div class = "col-md-6">
          {{#each burgers}}
              {{#if devoured}}
                
                <button data-name="button-name" data-id={{this.id}} class = "devouredBurger" type= "button" id = "burger" disabled >  {{this.id}}. {{this.burger_name}}
                  <span data-name="span name" data-id="span-id">
                    <i data-name="name" id="test" class='fas fa-trash-alt float-right text-danger delete-burger'></i>
                  </span>
                </button>
                
              {{/if}}
              
            {{/each}}
          
        </div>
      </div>
      <form id= "addburger" class="create-form">
        <div class="form-group">
          <input id = "burgerText" type="text" name="burger_name">
        </div>
        <button  type="submit" class="btn btn-primary">Submit</button>
      </form>   
      <p>Eat a burger you want to eat Click the "Submit" button.</p>
  </div>
